@model OnlineShop2022.Models.ProductModel
@{
}
<h1>Update</h1>


<div class="container">
    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Product Description</label>
                <input asp-for="Description" type="text" class="form-control" id="description" placeholder="Description" name="description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input asp-for="Price" type="text" class="form-control" id="price" placeholder="Price" name="price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <img src="@Model.ImagePath" class="img-thumbnail img-product">
                <input type="hidden" asp-for="ImagePath" />
                <input class="form-control" asp-for="ImagePath" type="file" id="formFile">
            </div>
            <div class="mb-3">
                <button class="btn btn-info" type="submit">Update Product</button>
            </div>
        </div>
    </form>
</div>